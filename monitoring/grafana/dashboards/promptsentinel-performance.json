{
  "dashboard": {
    "id": null,
    "uid": "promptsentinel-performance",
    "title": "PromptSentinel - Performance",
    "tags": ["promptsentinel", "performance", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "timeseries",
        "title": "Response Time Percentiles",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(promptsentinel_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(promptsentinel_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(promptsentinel_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(promptsentinel_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "timeseries",
        "title": "Detection Strategy Performance",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(promptsentinel_strategy_duration_seconds_bucket[5m])) by (strategy, le))",
            "legendFormat": "{{strategy}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "timeseries",
        "title": "Cache Performance",
        "targets": [
          {
            "expr": "sum(rate(promptsentinel_cache_hits_total[5m]))",
            "legendFormat": "Cache Hits",
            "refId": "A"
          },
          {
            "expr": "sum(rate(promptsentinel_cache_misses_total[5m]))",
            "legendFormat": "Cache Misses",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(promptsentinel_cache_operation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95 Cache Latency",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "P95 Cache Latency"},
              "properties": [
                {"id": "unit", "value": "s"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "timeseries",
        "title": "Provider Performance",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(promptsentinel_provider_request_duration_seconds_bucket[5m])) by (provider, le))",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16},
        "type": "stat",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 268435456},
                {"color": "red", "value": 536870912}
              ]
            },
            "unit": "bytes"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 16},
        "type": "stat",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 16},
        "type": "stat",
        "title": "Active Connections",
        "targets": [
          {
            "expr": "promptsentinel_active_connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "type": "timeseries",
        "title": "Rate Limiting",
        "targets": [
          {
            "expr": "sum(rate(promptsentinel_rate_limit_requests_total[5m]))",
            "legendFormat": "Total Requests",
            "refId": "A"
          },
          {
            "expr": "sum(rate(promptsentinel_rate_limit_rejected_total[5m]))",
            "legendFormat": "Rejected",
            "refId": "B"
          },
          {
            "expr": "promptsentinel_rate_limit_tokens_remaining",
            "legendFormat": "Tokens Remaining",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Tokens Remaining"},
              "properties": [
                {"id": "custom.axisPlacement", "value": "right"},
                {"id": "unit", "value": "short"}
              ]
            }
          ]
        }
      }
    ]
  }
}