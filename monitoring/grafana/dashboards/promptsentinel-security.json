{
  "dashboard": {
    "id": null,
    "uid": "promptsentinel-security",
    "title": "PromptSentinel - Security",
    "tags": ["promptsentinel", "security", "threats"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Threats Blocked (24h)",
        "targets": [
          {
            "expr": "sum(increase(promptsentinel_detections_total{verdict=\"block\"}[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "PII Detections (24h)",
        "targets": [
          {
            "expr": "sum(increase(promptsentinel_pii_detections_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 200}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Critical Threats",
        "targets": [
          {
            "expr": "sum(increase(promptsentinel_critical_threats_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Threat Score",
        "targets": [
          {
            "expr": "avg(promptsentinel_threat_score)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.3},
                {"color": "red", "value": 0.7}
              ]
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 4},
        "type": "timeseries",
        "title": "Attack Categories Over Time",
        "targets": [
          {
            "expr": "sum by (category) (rate(promptsentinel_detection_categories_total[5m]))",
            "legendFormat": "{{category}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 20,
              "gradientMode": "none",
              "spanNulls": false,
              "stacking": {
                "mode": "normal",
                "group": "A"
              }
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 4},
        "type": "piechart",
        "title": "PII Types Detected",
        "targets": [
          {
            "expr": "sum by (pii_type) (increase(promptsentinel_pii_by_type_total[24h]))",
            "legendFormat": "{{pii_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "value"],
          "legendDisplayMode": "table",
          "legendPlacement": "right",
          "legendValues": ["value", "percent"]
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14},
        "type": "logs",
        "title": "Recent Security Events",
        "targets": [
          {
            "expr": "{job=\"promptsentinel\"} |~ \"block|threat|attack|injection|jailbreak\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "type": "table",
        "title": "Top Attack Sources",
        "targets": [
          {
            "expr": "topk(10, sum by (client_id) (increase(promptsentinel_detections_total{verdict=\"block\"}[1h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "color-background",
              "align": "auto"
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "type": "timeseries",
        "title": "Confidence Score Distribution",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(promptsentinel_detection_confidence_bucket[5m])) by (le))",
            "legendFormat": "Median",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.25, sum(rate(promptsentinel_detection_confidence_bucket[5m])) by (le))",
            "legendFormat": "Q1",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.75, sum(rate(promptsentinel_detection_confidence_bucket[5m])) by (le))",
            "legendFormat": "Q3",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(promptsentinel_critical_threats_total[1m]) > 0",
          "name": "Critical Threats",
          "iconColor": "red",
          "tags": ["security", "critical"]
        }
      ]
    }
  }
}
